<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <submitter>IDB_All_Users</submitter>
        <type>group</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Description__c</field>
        <field>Status__c</field>
        <field>RecordType</field>
        <field>IDB_Approver__c</field>
        <field>Opportunity__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>IDB_Approver__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Approver Action</label>
        <name>IDB_Approver_Action</name>
    </approvalStep>
    <description>This Approval Process is to Approve/Reject Document and Questionnaire check List Items</description>
    <emailTemplate>IDB_Invest_Notification_Templates/IDB_Document_Checklist_Approval_Notification</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Document_Checklist_Item__c.IDB_Approver__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Document_Checklist_Item__c.Status__c</field>
            <operation>equals</operation>
            <value>New,Published,Rejected</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>IDB_UpdateToApproved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>IDB_NotifyRejectionToSubmitter</name>
            <type>Alert</type>
        </action>
        <action>
            <name>IDB_UpdateToRejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>IDB_EmailUpdate</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>IDB_UpdateLastName</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>IDB_UpdateToSubmitted</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>ApprovalProcess_DocumentCheckListItem</label>
    <processOrder>1</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
