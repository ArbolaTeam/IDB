<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Conflict_of_Interest__c</field>
        <field>Conflict_of_Interest_Details__c</field>
        <field>Decline_to_Participate__c</field>
        <field>CreatedBy</field>
        <field>Firm_Assumptions__c</field>
        <field>LastModifiedBy</field>
        <field>Reason_for_Withdrawal__c</field>
        <field>RFP_Initiation__c</field>
        <field>Tax_If_Applicable__c</field>
        <field>Total_Estimated_Amount__c</field>
        <field>Total_Expenses__c</field>
        <field>Total_Fees__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Conflict_of_interest</name>
                <type>Alert</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <type>adhoc</type>
            </approver>
        </assignedApprover>
        <label>COI Step 1</label>
        <name>COI_Step_1</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <type>adhoc</type>
            </approver>
        </assignedApprover>
        <label>COI Step 2</label>
        <name>COI_Step_2</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <emailTemplate>LegalStratusISV__LegalStratus/COI_Waiver_Approval</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>RFP_Quote__c.Decline_to_Participate__c</field>
            <operation>equals</operation>
            <value>Continue</value>
        </criteriaItems>
        <criteriaItems>
            <field>RFP_Quote__c.Conflict_of_Interest__c</field>
            <operation>equals</operation>
            <value>Yes</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>RFP COI Waiver Approval</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>true</useApproverFieldOfRecordOwner>
        <userHierarchyField>first_approver__c</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>1</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
